<%= form_with(model: [@current_project, chat], local: true) do |form| %>
  <div class="col-xl-8">
    <div class="card mb-4">
      <div class="card-header"><h3>Editing Chat</h3></div>
        <div class="card-body">
          </form>
            <div class="row gx-3 mb-3">
              <div class="md-6"> 
                <div>
                  <%= form.label :name, style: "display: block", class:"small mb-1"%>
                  <%= form.text_field :name, class: "form-control"%>
                </div>
              </div>
            </div>
            <% if chat.project.project_type == "public"%>
              <div class="row gx-3 mb-3">
                <div class="mb-3"> 
                  <div>
                    <%= form.label :description, style: "display: block", class:"small mb-1" %>
                    <%= form.text_area :description, class: "form-control" %>
                  </div>
                </div>
              </div>
              <% end %>
              
              <div class="row gx-3 mb-3">
                <div class="mb-3"> 
              </div>
            <%= form.submit "Save changes", class:"btn btn-primary" %>
          </form>
        </div>
      </div>
    </div>
  </div> 
<% end %>
