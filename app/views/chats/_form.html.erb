<%= form_with(model: [chat.project, chat], local: true) do |form| %>
  <div class="col">
    <div class="card-body">
      </form>
        <div class="row gx-3 mb-3">
          <div class="md-6"> 
            <div>
              <%= form.label :name, style: "display: block", class:"small mb-1"%>
              <%= form.text_field :name, class: "form-control"%>
            </div>
          </div>
        </div>
        <% if chat.project.project_type == "public"%>
          <div class="row gx-3 mb-3">
            <div class="mb-3"> 
              <div>
                <%= form.label :description, style: "display: block", class:"small mb-1" %>
                <%= form.text_area :description, class: "form-control" %>
              </div>
            </div>
          </div>
          <% end %>
          
          <div class="row gx-3 ">
            <div class=""> 
          </div>
        <%= form.submit "Save changes", class:"btn btn-primary" %>
      </form>
    </div>
  </div>
  </div> 
<% end %>
