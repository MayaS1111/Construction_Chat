<li class="p-2 border-bottom chat-item <%= 'selected_chat' if chat.id.to_s == params[:selected_chat] %>" style="border-bottom: 1px solid rgba(255,255,255,.3) !important;">
  <a href="/chat/<%= chat.project_id %>/<%= chat.id %>?selected_project=<%= chat.project_id %>&selected_chat=<%= chat.id %>" 
     class="d-flex justify-content-between link-dark text-decoration-none chat-item-ancher" 
     aria-selected="<%= chat.id.to_s == params[:selected_chat] ? 'true' : 'false' %>">
    <div class="d-flex justify-content-start align-items-center">
      <img src="https://api.dicebear.com/9.x/icons/svg?seed=Bob&backgroundColor=D2042D" 
           alt="Avatar representing <%= chat.name %>" 
           class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" 
           width="60">
  
      <div class="pt-1 d-flex align-items-center">
        <p class="fw-bold mb-0"><%= chat.name %></p> 
      </div>
      
      <div class="col">
        <% if chat.project.project_type == "public" %>
          <div class="d-flex justify-content-center">
            <a type="button" data-bs-toggle="modal" data-bs-target="#<%= chat.id %>_chat_info_Modal" 
               aria-label="More information about <%= chat.name %>">
              <i class="fa-solid fa-circle-info" aria-hidden="true"></i>
            </a>
          </div>
        <% end %>
        <div class="d-flex">
          <%= render "chats/dropdown_button", chat: chat %>
        </div>
      </div>
    </div>
  </a>
</li>
<hr>

<!-- Modals -->
<div class="modal fade" id="<%= chat.id %>_chat_info_Modal" tabindex="-1" aria-labelledby="chatInfoModalLabel_<%= chat.id %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="chatInfoModalLabel_<%= chat.id %>"><%= chat.name %></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><%= chat.description %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Custom Styles -->
<style>
  .chat-item {
    padding: 10px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }
  .chat-item.selected_chat {
    background-color: #f2f2f2; 
    font-weight: bold;
  }
  .chat-item:hover {
    background-color: #e9ecef;
  }
</style>
