<li class="p-2 border-bottom" style="border-bottom: 1px solid rgba(255,255,255,.3) !important;">
  <a href= "/chat/<%=chat.project_id%>/<%=chat.id%>" class="d-flex justify-content-between link-dark text-decoration-none">
    <div class="d-flex justify-content-start align-items-center">
      <img src="https://api.dicebear.com/9.x/icons/svg?seed=Bob&backgroundColor=D2042D" alt="avatar"
        class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">
    <% if chat.project.project_type == "private"%>  
      <div class="pt-1 d-flex align-items-center">
    <% else %>  
      <div class="pt-1">
    <% end %>
        <p class="fw-bold mb-0"><%=chat.name%></p>
        <% if chat.project.project_type == "public"%>
          <p class="small text-black"><%=chat.description%></p>
        <% end %>  
      </div>
      
      <div class="col">
        <% if chat.project.project_type == "public"%>
          <div class="d-flex d-flex justify-content-center">
            <a type="button" data-bs-toggle="modal" data-bs-target="#<%=chat.id%>_info_Modal">
              <i class="fa-solid fa-circle-info"></i>
            </a>
          </div>
        <% end %>
      <div class="d-flex">
       <%= render "chats/dropdown_button", chat: chat%>
      </div>
    </div>
  </a>
</li>
