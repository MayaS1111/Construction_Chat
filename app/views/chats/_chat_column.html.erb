<div class="col-md-3">
  <h5 class="font-weight-bold mb-3 text-center text-black">Chats</h5>
  <div class="card mask-custom">
    <div class="card-body overflow-auto" style= "max-height: 85vh">
      <ul class="list-unstyled mb-0">
          <% chats.each do |chat| %>
            <%= render "chats/chat", chat: chat %>
            <hr>
          <% end %>
      </ul>
    </div>
  </div>
</div>
