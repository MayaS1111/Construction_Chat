<section class="features-section mb-5" aria-labelledby="features_heading">
  <h3 id="features_heading" class="text-center mb-5">Features</h3>
  <div class="container">
    <div class="row gy-4">
      <div class="col-lg-6 mb-4">
        <div class="d-flex justify-content-center">
          <%= image_tag 'creating-project', alt: 'Creating and editing a project', class: 'gif' %>
        </div>
        <div class="text-center py-4">
          <p>Create and edit projects</p>
          <p>Create and edit chats</p>
        </div>
      </div>
      <div class="col-lg-6 mb-4">
        <div class="d-flex justify-content-center">
          <%= image_tag 'add-user.gif', alt: 'Seeing and adding new members to chat', class: 'gif' %>
        </div>
        <div class="text-center py-4">
          <p>See all members in chat</p>
          <p>Add or remove users from chat</p>
        </div>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-12 mb-4">
        <div class="d-flex justify-content-center">
          <%= image_tag 'private-message.gif', alt: 'Privately messaging user', class: 'gif' %>
        </div>
        <div class="text-center py-4">
          <p>Privately message users</p>
          <p>Look at users' profiles for contact information</p>
        </div>
      </div>
    </div>
    <div class="row mb-4 d-flex justify-content-center">
      <div class="col-lg-4 d-flex justify-content-center">
        <%= image_tag 'receiving.gif', alt: 'Receiving message', class: 'gif' %>
      </div>
      <div class="col-lg-4 d-flex align-items-center justify-content-center py-4">
        <p class="text-center">Real-time chat</p>
      </div>
      <div class="col-lg-4 d-flex justify-content-center">
        <%= image_tag 'sending.gif', alt: 'Sending message', class: 'gif' %>
      </div>
    </div>
  </div>
</section>
