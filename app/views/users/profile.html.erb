
<div class="container ">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-4 mt-5">
        <img src="<%=@user_profile.profile_image%>" class="rounded-circle d-flex me-3 shadow-1-strong" >
    </div>
    <div class=" m-5">
      <div class="pt-1 d-flex justify-content-center align-items-center">
        <h1><%=@user_profile.name%></h1>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <h2 ><%=@user_profile.job_title%></h2>
      </div>
      <div class="pt-4 d-flex justify-content-center align-items-center">
        <h4>Email: <%=@user_profile.email%></h4> 
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <h4>Number: <%=@user_profile.phone_number%></h4>
      </div>
    </div> 
  </div>
</div>
