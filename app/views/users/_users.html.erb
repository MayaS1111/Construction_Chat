<div class="card col-md-3 my-3 p-3" aria-labelledby="user_profile_heading" role="region">
  <img src="<%= user.profile_image %>" alt="Profile picture of <%= user.name %>" 
       class="pt-4 rounded-circle d-flex align-self-center me-3 shadow-1-strong" height="100" width="100">
  <div class="card-body">
    <div class="pt-1 d-flex justify-content-center align-items-center">
      <h5 id="user_profile_heading" class="card-title"><%= user.name %></h5>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <p class="fw-bold mb-0"><%= user.job_title %></p>
    </div>
    <div class="pt-4 d-flex justify-content-center align-items-center">
      <p class="small"><strong>Email:</strong> <%= user.email %></p>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <p class="small"><strong>Number:</strong> <%= user.phone_number %></p>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <p class="small"><strong>ID:</strong> <%= user.employee_id %></p>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col">
      <% if user.admin? %>
        <div class="btn pt-3 mt-2 d-flex" style="width: 100%;" role="button" aria-pressed="false">
          <i class="fa-solid fa-star" style="color: #D2042D; font-size: 20px; width: 30px" aria-hidden="true"></i>
          <a href="/admin/user/<%= user.id %>/edit" class="dropdown-item d-flex justify-content-start align-items-center pb-1" role="link">
            Admin
          </a>
        </div>
      <% else %>
        <div class="btn pt-3 mt-2 d-flex" style="width: 100%;" role="button" aria-pressed="false">
          <i class="fa-regular fa-star" style="color: #D2042D; font-size: 20px; width: 30px" aria-hidden="true"></i>
          <a href="/admin/user/<%= user.id %>/edit" class="dropdown-item d-flex justify-content-start align-items-center pb-1" role="link">
            Not Admin
          </a>
        </div>
      <% end %>
    </div>
    <div class="col">
      <div class="m-1">
        <div class="btn pt-3 mt-2 d-flex btn-primary" style="width: 100%;" role="button">
          <a href="/<%= user.id %>" class="dropdown-item d-flex justify-content-center align-items-center pb-1" role="link">
            Profile
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
