<div class="card col-md-3 my-3 p-10">
  <div class="row">
    <% if user.admin? %>
    <div class="m-1 ">
      <div class="btn pt-3 mt-2 d-flex" style="background-color: #f2f2f2;">
        <i class="fa-solid fa-star" style="color: #D2042D; font-size: 20px; width: 30px"></i>
        <p>Admin</p>
      </div>
    </div>  
    <% else %>
    <div class="m-1">
      <div class="btn pt-3 mt-2 d-flex" style="background-color: #f2f2f2;">
        <i class="fa-regular fa-star" style="color: #D2042D; font-size: 20px; width: 30px"></i>
        <p>Not Admin</p>
      </div>
    </div>
    <% end %>
  </div>

  <img src="<%=user.profile_image%>"alt="avatar"
        class="pt-4 rounded-circle d-flex align-self-center me-3 shadow-1-strong" height= "100" width="100">
  <div class="card-body">
    <div class="pt-1 d-flex justify-content-center align-items-center">
      <h5 class="card-title"><%=user.name%></h5>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <p class="fw-bold mb-0"><%=user.job_title%></p>
    </div>
    <div class="pt-4 d-flex justify-content-center align-items-center">
      <p class="small "><%=user.email%></p> 
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <p class="small "><%=user.phone_number%></p>
    </div>
  </div>
</div>

