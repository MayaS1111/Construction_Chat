<div class="card col-md-3 p-10">
  <img src="<%=user.profile_image%>"alt="avatar"
        class="pt-4 rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="100">
  <div class="card-body">
    <div class="pt-1 d-flex justify-content-center align-items-center">
      <h5 class="card-title"><%=user.name%></h5>
      <% if user.admin? %>
        <i class="fa-solid fa-star"></i>
      <% end %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <p class="fw-bold mb-0"><%=user.job_title%></p>
    </div>
    <div class="pt-4 d-flex justify-content-center align-items-center">
      <p class="small "><%=user.email%></p> 
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <p class="small "><%=user.phone_number%></p>
    </div>
  </div>
</div>
