<%= form_with(model: project) do |form| %>
  <div class="col-xl-8" >
    <div class="card mb-4 ">
      <div class="card-header"><h3>Editing Project</h3></div>
        <div class="card-body">
          <form>
            <div class="row gx-3 mb-3 ">
              <div class="row md-6 d-flex justify-content-center"> 
                <div class="col">
                  <%= form.label :owner, style: "display: block", class:"small mb-1"%>
                  <%= form.label "#{project.owner.name}", style: "display: block", class:"medium mb-1"%>
                </div>
                <div class="col">
                  <div class="form-group">
                    <label for="exampleFormControlSelect1">Status</label>
                    <select class="form-control" name="status" selected="2" id="exampleFormControlSelect1">
                      <option name="1" class="fw-bold mb-0 text-primary">Open</option>
                      <option name="2" class="fw-bold mb-0 text-warning">In Progress</option>
                      <option name="3" class="fw-bold mb-0 text-danger">Closed</option>
                    </select>
                  </div>
              </div>
            </div>
              
            </div>
            <div class="row gx-3 mb-3">
              <div class="md-6"> 
                <div>
                  <%= form.label :name, style: "display: block", class:"small mb-1"%>
                  <%= form.text_field :name, class: "form-control"%>
                </div>
              </div>
            </div>
              <div class="row gx-3 mb-3">
                <div class="mb-3"> 
                  <div>
                    <%= form.label :description, style: "display: block", class:"small mb-1" %>
                    <%= form.text_area :description, class: "form-control" %>
                  </div>
                </div>
              </div>
            <div class="row gx-3 mb-3">
              <div class="mb-3"> 
                <div>
                  <%= form.label :location, style: "display: block", class:"small mb-1" %>
                  <%= form.text_field :location, class: "form-control" %>
                </div>
            </div>
            <%= form.submit "Save changes", class:"btn btn-primary" %>
          </form>
        </div>
      </div>
    </div>
  </div> 
<% end %>
