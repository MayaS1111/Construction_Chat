<li class="p-2 border-bottom" style="border-bottom: 1px solid rgba(255,255,255,.3) !important;">
  <a href= "/chat/<%=project.id%>" class="d-flex justify-content-between link-dark">
    <div class="d-flex fjustify-content-start align-items-center">
      <img src="https://api.dicebear.com/9.x/icons/svg?seed=Casper&backgroundColor=ffd5dc" alt="avatar"
        class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">

    <% if project.project_type == "private"%>  
      <div class="pt-1 d-flex align-items-center">
    <% else %>  
      <div class="pt-1">
    <% end %>
        <p class="fw-bold mb-0"><%=project.name%></p>
        <% if project.project_type == "public"%>
          <p class="small text-black"><%=project.description%></p>
        <% end %>  
      </div>
      <div class="d-flex">
       <%= render "projects/dropdown_button", project: project%>
      </div>
    </div>
  </a>
</li>
