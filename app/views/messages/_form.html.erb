<%= form_with(model: message) do |form| %>
  

  <%= form.hidden_field :photo_id %>

  <div class="mb-3">
    <%= form.label :body, class: "sr-only" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-secondary btn-block" %>
  </div>
<% end %>
