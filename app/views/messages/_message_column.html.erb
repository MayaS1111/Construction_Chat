
<h4 class="font-weight-bold mb-3 text-center text-black"><%=chat.name%></h5>
<ul class="list-unstyled text-black">
  <div id="messages-container" class="container overflow-auto" style="max-height: 58vh"
     data-chat-id="<%= @current_chat.id %>"
     data-project-id="<%= @current_chat.project_id %>">
      <%= render partial: "messages/message", collection: chat.messages, as: :message %>
  </div>
  <li class="mb-3">
    <div class="container mt-1">
      <div data-mdb-input-init class="form-outline form-black">
        <% message = chat.messages.new %>
        <%= render "messages/form", message:, chat: %>
        <div class="container mt-1">
        </div>
      </div>
    </div>
  </li>
</ul>
