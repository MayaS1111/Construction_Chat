<%= form_with(model: user_chat) do |form| %>
  <%= form.hidden_field :chat_id, value: chat.id %>

  <div class="d-flex justify-content-center align-items-center">
    <div class="card-body">
      <div class="row gx-3 mb-3">
        <div class="col">
          <div class="input-group">
            <%= form.collection_select :user_id, User.human, :id, :name, { prompt: "Select a user" }, { class: "form-select" } %>
          </div>
        </div>
      </div>
      <div class="row gx-3 mb-3">
        <div class="mb-3">
          <%# form.label :chat_id, style: "display: block", class:"small mb-1"%>
          <%# form.text_field :chat_id, value: "#{chat.id}", class: "form-control"%>
        </div>
      </div>

      <div class="row gx-3 mb-3">
        <div class="col-12"> 
          <%= form.submit "Save changes", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
