
<title>Login Form</title>
	<div class="mb-5 d-flex justify-content-center align-items-center">
		<div class="row ">
			<div class="">
		<div class="login-container p-6" style="width: 50rem;">
			<h2 class="header-red">Log In</h2>
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="form-inputs">
					<%= f.input :email,
											required: false,
											autofocus: true,
											label: false,
											input_html: { autocomplete: "email", class:"form__input", placeholder: "Email" }%>
					<%= f.input :password,
											required: false,
											label: false,
											input_html: { autocomplete: "current-password", class:"form__input", placeholder: "Password" }%>
					<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
				</div>

				<div class="form-actions">
					<input type="submit" value="Submit" class="btn">
				</div>
			<% end %>

			<div class="links">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
