<title>Edit Form</title>
	<div class="mb-5 d-flex justify-content-center align-items-center">
		<div class="row ">
		<div class="login-container p-6" style="width: 50rem;">
			<h2 class="header-red">Edit Profile</h2>
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <% if resource.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource_name %> from being saved:</h2>

          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

				<div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { class:"form__input", placeholder: "First Name" }%>
          <%= f.input :last_name,
                      required: true, 
                      label: false,
                      input_html: { class:"form__input", placeholder: "Last Name" }%>
          <%= f.input :job_title,
                      required: true ,
                      label: false,
                      input_html: { class:"form__input", placeholder: "Job Title" }%>
          <%= f.input :phone_number,
                      required: true ,
                      label: false,
                      input_html: { class:"form__input", placeholder: "Phone Number" }%>
          <%= f.input :email,
                      required: true,
                      label: false,
											input_html: { autocomplete: "email", class:"form__input", placeholder: "Email" }%>
          <%= f.input :profile_image,
                      required: true,
                      label: false,
                      input_html: { class:"form__input", placeholder: "Job Title" }%>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    label: false,
                    input_html: { autocomplete: "new-password", class:"form__input", placeholder: "New Password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      label: false,
                      input_html: { autocomplete: "new-password", class:"form__input", placeholder: "Confirm Password"  } %>
          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      label: false,
                      input_html: { autocomplete: "current-password", class:"form__input", placeholder: "Password To Save Changes"} %>              
				</div>

				<div class="form-actions">
					<input type="submit" value="Save Changes" class="btn">
				</div>
			<% end %>

			<div class="links">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>

  <div class="mb-5 d-flex justify-content-center align-items-center">
		<div class="row ">
		<div class="login-container p-6" style="width: 50rem;">
      <h2 class="header-red">Cancel My Account</h2>

      <div>
        <div class="form-actions">
          Unhappy? 
        </div>
        <div class="form-actions">
          <%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn" %>
        </div>
      </div>

      <div class="links">
        <%= link_to "Back", :back %>
      </div>
    </div>
	</div>
</div>
